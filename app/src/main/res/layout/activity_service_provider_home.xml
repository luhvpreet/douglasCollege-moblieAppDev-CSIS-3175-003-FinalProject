<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceProviderHomeActivity">

    <ImageView
        android:id="@+id/imgView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/foreground_design"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/txtSPHUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:gravity="center"
        android:text="Welcome (username)!"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSPHEditProfile"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/btnSPHViewProfile"
        app:layout_constraintTop_toTopOf="@+id/imgView1" />

    <Button
        android:id="@+id/btnSPHEditProfile"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_bg_design_2"
        android:contentDescription="profile"
        android:foreground="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtSPHEditProfile"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSPHEditProfile"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSPHEditProfile"
        app:layout_constraintTop_toBottomOf="@+id/btnSPHEditProfile" />

    <Button
        android:id="@+id/btnSPHViewProfile"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/btn_bg_design_2"
        android:contentDescription="profile"
        android:foreground="@drawable/ic_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtSPHViewProfile"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="View Profile"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSPHViewProfile"
        app:layout_constraintStart_toStartOf="@+id/btnSPHViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/btnSPHViewProfile" />

    <Button
        android:id="@+id/btnSPHViewServices"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_bg_design_2"
        android:foreground="@drawable/ic_viewservices"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/txtSPHViewServices"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="View Services"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSPHViewServices"
        app:layout_constraintStart_toStartOf="@+id/btnSPHViewServices"
        app:layout_constraintTop_toBottomOf="@+id/btnSPHViewServices" />


    <Button
        android:id="@+id/btnSPHEditServices"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/btn_bg_design_2"
        android:foreground="@drawable/ic_editservices"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/txtSPHEditServices"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Edit Services"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSPHEditServices"
        app:layout_constraintStart_toStartOf="@+id/btnSPHEditServices"
        app:layout_constraintTop_toBottomOf="@+id/btnSPHEditServices" />

    <Button
        android:id="@+id/btnSPHViewAppointment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/btn_bg_design_2"
        android:foreground="@drawable/ic_appointment_view"
        android:text="View"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/txtSPHAppointmentsView"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Appointments"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="@+id/btnSPHViewAppointment"
        app:layout_constraintStart_toStartOf="@+id/btnSPHViewAppointment"
        app:layout_constraintTop_toBottomOf="@+id/btnSPHViewAppointment" />

    <Button
        android:id="@+id/btnSPHViewServiceHistory"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_bg_design_2"
        android:contentDescription="history"
        android:text=""
        app:icon="@drawable/ic_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.856" />
    <TextView
        android:id="@+id/txtSPHServiceHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="View Service History"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/btnSPHViewServiceHistory"
        app:layout_constraintEnd_toStartOf="@+id/btnSPHViewServiceHistory"
        app:layout_constraintTop_toTopOf="@+id/btnSPHViewServiceHistory"
        app:layout_constraintVertical_bias="0.545" />

    <Button
        android:id="@+id/btnSPHLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg_design"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="@+id/imgView1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnReports"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_bg_design"
        android:text="Generate Reports"
        app:layout_constraintBottom_toBottomOf="@+id/imgView1"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>