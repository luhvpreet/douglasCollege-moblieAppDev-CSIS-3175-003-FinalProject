<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupAccountTypeActivity">

    <ImageView
        android:id="@+id/imgViewCustomer"
        android:layout_width="0dp"
        android:layout_height="234dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintEnd_toStartOf="@+id/imgViewProvider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/c" />

    <ImageView
        android:id="@+id/imgViewProvider"
        android:layout_width="0dp"
        android:layout_height="234dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgViewCustomer"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/s" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="45dp"
        android:text="Are you a Service"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/imgViewCustomer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/RadGpServiceType"
        android:layout_width="346dp"
        android:layout_height="52dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="21dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnSANext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewCustomer">

        <RadioButton
            android:id="@+id/radbtnTaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taker"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   or   "
            android:textSize="34sp" />

        <RadioButton
            android:id="@+id/radbtnProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provider"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   \?"
            android:textSize="34sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btnSANext"
        android:layout_width="175dp"
        android:layout_height="70dp"
        android:layout_marginTop="21dp"
        android:text="Next"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RadGpServiceType" />

</androidx.constraintlayout.widget.ConstraintLayout>